<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="using:ToDoList.Models"
        x:DataType="m:TodoItem"
        Width="220"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d" d:DesignWidth="220"
        x:Class="ToDoList.Views.EditTodo"
        Title="EditTodo">
    <StackPanel VerticalAlignment="Center" Spacing="5" Margin="10">
        <TextBox Text="{Binding Title}" Width="200"/>
        <Button HorizontalAlignment="Right" Content="Save" Click="CloseWindows"/>
    </StackPanel>
</Window>